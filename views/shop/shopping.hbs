{{# if products }}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <ul class="list-group">
                {{# each products }}
                    <li class="list-group-item">
                        <span class="badge">{{ this.qty }}</span>
                        <strong>{{ this.item.title }}</strong>
                        <span class="label label-success">R$ {{ this.price }}</span>
                        <div class="btn-group">
                            <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">Opções <span class="caret"></span></button>
                            <ul class="dropdown-menu">
                                <li><a href="/reduzir/{{this.item._id}}">Remover 1 unidade</a></li>
                                <li><a href="/remover/{{this.item._id}}">Remover tudo</a></li>
                            </ul>
                        </div>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <strong>Total: R$ {{ totalPrice }}</strong>
        </div>
    </div>
    <hr>
{{ else }}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <h2>Sem itens do carrinho</h2>
        </div>
    </div>
{{/if}}

